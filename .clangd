# Apply this config conditionally to all C files
If:
    PathMatch: .*\.(c|h)$
CompileFlags:
    Compiler: /opt/cray/pe/craype/2.7.30/bin/cc
    Add: [
        --no-cuda-version-check,
        -x,
        c++-header,
        -I/global/common/software/nersc/pe/gpu/gnu/openmpi/5.0.3/include
    ]
    Remove:
        # strip CUDA fatbin args
        - "-Xfatbin*"
        # strip CUDA arch flags
        - "-gencode*"
        - "--generate-code*"
        # strip CUDA flags unknown to clang
        - "-ccbin*"
        - "--compiler-options*"
        - "--expt-extended-lambda"
        - "--expt-relaxed-constexpr"
        - "-forward-unknown-to-host-compiler"
        - "-Werror=cross-execution-space-call"
        - "--options-file"
        - "-Xcompiler=*"
        - "-frerun-loop-opt"
        - "-fabi-compat-version=2"
---

# Apply this config conditionally to all C++ files
If:
    PathMatch: .*\.(c|h)pp
CompileFlags:
    Compiler: /opt/cray/pe/craype/2.7.30/bin/CC
    Add: [
        --no-cuda-version-check,
        -I/global/common/software/nersc/pe/gpu/gnu/openmpi/5.0.3/include
    ]
    Remove:
        # strip CUDA fatbin args
        - "-Xfatbin*"
        # strip CUDA arch flags
        - "-gencode*"
        - "--generate-code*"
        # strip CUDA flags unknown to clang
        - "-ccbin*"
        - "--compiler-options*"
        - "--expt-extended-lambda"
        - "--expt-relaxed-constexpr"
        - "-forward-unknown-to-host-compiler"
        - "-Werror=cross-execution-space-call"
        - "--options-file"
        - "-Xcompiler=*"
        - "-frerun-loop-opt"
        - "-fabi-compat-version=2"
        - "-Xcudafe"
        - "--diag-suppress=1650"
        - "--diag-suppress=128"
        - "-compress-all"
        - "--threads"
---

# Apply this config conditionally to all CUDA files
If:
    PathMatch: .*\.cuh?
CompileFlags:
    Compiler: /opt/nvidia/hpc_sdk/Linux_x86_64/23.9/cuda/12.2/bin/nvcc
    Add: [
        --cuda-gpu-arch=sm_80,
        -I/global/common/software/nersc/pe/gpu/gnu/openmpi/5.0.3/include
    ]
    Remove:
        # strip CUDA fatbin args
        - "-Xfatbin*"
        # strip CUDA arch flags
        - "-gencode*"
        - "--generate-code*"
        # strip CUDA flags unknown to clang
        - "-ccbin*"
        - "--compiler-options*"
        - "--expt-extended-lambda"
        - "--expt-relaxed-constexpr"
        - "-forward-unknown-to-host-compiler"
        - "-Werror=cross-execution-space-call"
        - "--options-file"
        - "-Xcompiler=*"
        - "-Xcudafe"
        - "--diag-suppress=1650"
        - "--diag-suppress=128"
        - "-compress-all"
        - "--threads"